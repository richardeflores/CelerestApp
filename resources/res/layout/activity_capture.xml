                <android.support.p003v7.widget.AppCompatImageView android:id="@+id/albumIv" android:layout_width="36dp" android:layout_height="36dp" android:tint="#ffffffff" app:srcCompat="@drawable/ic_photo"/>
                <TextView android:textColor="#ffffff" android:gravity="center" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:text="相册"/>
            </android.support.p003v7.widget.LinearLayoutCompat>
        </android.support.p003v7.widget.LinearLayoutCompat>
    </android.support.p003v7.widget.LinearLayoutCompat>
