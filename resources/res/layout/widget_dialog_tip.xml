<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_gravity="center" android:orientation="vertical" android:background="@drawable/bg_white_radius" android:layout_width="wrap_content" android:layout_height="wrap_content">
    <TextView android:textColor="#959595" android:gravity="center" android:id="@+id/tvTitle" android:background="@drawable/text_title_bluetooth_device_list" android:layout_width="match_parent" android:layout_height="40dp" android:text="@string/dialog_ask_title"/>
    <LinearLayout android:gravity="center" android:orientation="horizontal" android:padding="15dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:minWidth="200dp">
        <ImageView android:id="@+id/ivTip" android:layout_width="35dp" android:layout_height="35dp" android:src="@drawable/ico_tstb"/>
        <TextView android:textSize="16sp" android:layout_gravity="center" android:id="@+id/tvMsg" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:text="123"/>
    </LinearLayout>
    <TextView style="@style/line"/>
    <Button android:id="@+id/btConfirm" android:background="@drawable/bg_white_radius" android:clickable="true" android:layout_width="match_parent" android:layout_height="40dp" android:text="@string/confirm"/>
</LinearLayout>
